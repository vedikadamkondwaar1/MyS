<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="STORY LIST"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:textStyle="bold">

    </TextView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewA"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:clickable="true">


            <ImageView
                android:id="@+id/imageViewA"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/b" />

            <TextView
                android:id="@+id/textViewA"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="98dp"
                android:gravity="center"
                android:text="first sory" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewB"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:clickable="true">


            <ImageView
                android:id="@+id/imageViewB"
                android:layout_width="139dp"
                android:layout_height="83dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/b" />

            <TextView
                android:id="@+id/textViewB"
                android:layout_width="128dp"
                android:layout_height="39dp"
                android:layout_marginTop="98dp"
                android:gravity="center"
                android:text="Second sory" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewC"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:clickable="true">


            <ImageView
                android:id="@+id/imageViewC"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/b" />

            <TextView
                android:id="@+id/textViewC"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="98dp"
                android:gravity="center"
                android:text="first sory" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewD"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:clickable="true">


            <ImageView
                android:id="@+id/imageViewD"
                android:layout_width="139dp"
                android:layout_height="83dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/b" />

            <TextView
                android:id="@+id/textViewD"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="98dp"
                android:gravity="center"
                android:text="fourth sory" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewE"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:clickable="true">


            <ImageView
                android:id="@+id/imageViewE"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/b" />

            <TextView
                android:id="@+id/textViewE"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="98dp"
                android:gravity="center"
                android:text="first sory" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewF"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:clickable="true">


            <ImageView
                android:id="@+id/imageViewF"
                android:layout_width="139dp"
                android:layout_height="83dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/b" />

            <TextView
                android:id="@+id/textViewF"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="98dp"
                android:gravity="center"
                android:text="fourth sory" />


        </androidx.cardview.widget.CardView>
    </GridLayout>

</LinearLayout>